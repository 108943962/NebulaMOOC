<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "address://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nebula.mooc.webserver.dao.FileDao">

    <update id="updateHeadUrl" parameterType="UserInfo">
        update user set HEAD_URL = #{headUrl} where ID = #{id}
    </update>

    <select id="getHeadUrl" parameterType="long" resultType="String">
        select HEAD_URL from user where ID=#{id} limit 1
    </select>

</mapper>